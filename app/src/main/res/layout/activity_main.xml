<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/singerName"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/white"
            android:hint="Singer name"
            android:padding="10sp" />

        <EditText
            android:id="@+id/countryName"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@color/white"
            android:hint="Country Name"
            android:padding="10sp" />

        <EditText
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@color/white"
            android:hint="Product description"
            android:padding="10sp" />

        <Button
            android:id="@+id/add_product_btn"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="4sp"
            android:backgroundTint="@color/teal_200"
            android:text="save product" />


        <Button
            android:id="@+id/get_all_products_btn"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="20sp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:text="get all products" />

        <Button
            android:id="@+id/get_product_by_id_btn"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="4sp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="get product by id" />

        <Button
            android:id="@+id/get_product_by_para_btn"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="4sp"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="Get product by parameter" />

        <Button
            android:id="@+id/edit_product_btn"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="4sp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:text="edit product" />

        <Button
            android:id="@+id/delete_product_btn"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="4sp"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="delete product" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>