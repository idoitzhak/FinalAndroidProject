<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    android:background="#7361DA"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/searchCountry"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@color/white"
            android:hint="Country Name"
            android:padding="10sp" />
        <Button
            android:id="@+id/searchCountry_btn"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="15sp"
            android:backgroundTint="@color/teal_200"
            android:text="search by country" />
        <EditText
            android:id="@+id/searchSinger"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="40sp"
            android:background="@color/white"
            android:hint="Singer Name"
            android:padding="10sp" />
        <Button
            android:id="@+id/searchSinger_btn"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="15sp"
            android:backgroundTint="@color/purple_200"
            android:text="search by singer" />
        <EditText
            android:id="@+id/searchSong"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="40sp"
            android:background="@color/white"
            android:hint="Song Name"
            android:padding="10sp" />
        <Button
            android:id="@+id/searchSong_btn"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="15sp"
            android:backgroundTint="@color/purple_700"
            android:text="search by song" />
        <EditText
            android:id="@+id/searchPosition"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="40sp"
            android:background="@color/white"
            android:hint="Position"
            android:padding="10sp" />
        <Button
            android:id="@+id/searchPosition_btn"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="15sp"
            android:backgroundTint="#F16258"
            android:text="search by position" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>